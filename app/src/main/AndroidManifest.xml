<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sitcomapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_televisions_tv_screen_svgrepo_com"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SitcomApp">
        <activity
            android:name=".theOffice"
            android:exported="false" />
        <activity
            android:name=".recyclerView_activity"
            android:exported="false" />
        <activity
            android:name=".ListOfSitcoms"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SitcomApp" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SitcomApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SitcomMainApp" />
    </application>

</manifest>